<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">


    <TextView
        android:id="@+id/namafilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Film"
        android:textSize="16sp"
        android:textFontWeight="2"
        android:textStyle="bold"
        android:textColor="@color/blacktext"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/noteater"
        android:paddingLeft="5dp"
        android:layout_below="@+id/name"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/blacktext"
        android:text="Nomor Teater"/>

    <TextView
        android:id="@+id/jam_mulai"
        android:paddingLeft="5dp"
        android:layout_below="@+id/noteater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/darkGray"
        android:text="jam_mulai"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/jam_selesai"
        android:paddingLeft="5dp"
        android:layout_below="@+id/jam_mulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/darkGray"
        android:text="jam_selesai"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/harga"
        android:paddingLeft="5dp"
        android:layout_below="@+id/jam_selesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/blacktext"
        android:text="Harga"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>